{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@backend/api-endpoints": ["libs/backend/api-endpoints/src/index.ts"],
      "@backend/dtos/input": ["libs/backend/dtos/input-dtos/src/index.ts"],
      "@backend/dtos/output": ["libs/backend/dtos/output-dtos/src/index.ts"],
      "@backend/filters": ["libs/backend/filters/src/index.ts"],
      "@backend/interfaces/api": [
        "libs/backend/interfaces/api-interfaces/src/index.ts"
      ],
      "@backend/interfaces/orm-repositories": [
        "libs/backend/interfaces/orm-repositories-interfaces/src/index.ts"
      ],
      "@backend/interfaces/systems": [
        "libs/backend/interfaces/systems-interfaces/src/index.ts"
      ],
      "@backend/orm-repositories": [
        "libs/backend/orm-repositories/src/index.ts"
      ],
      "@backend/orm-schemas": ["libs/backend/orm-schemas/src/index.ts"],
      "@backend/sessions-and-tokens": [
        "libs/backend/sessions-and-tokens/src/index.ts"
      ],
      "@backend/systems/account-logics": [
        "libs/backend/system-logics/account-logics/src/index.ts"
      ],
      "@common/interfaces/full": ["libs/common/interfaces/full/src/index.ts"],
      "@common/interfaces/pure-and-base": [
        "libs/common/interfaces/pure-and-base/src/index.ts"
      ],
      "@common/interfaces/tokens": [
        "libs/common/interfaces/tokens/src/index.ts"
      ],
      "@common/interfaces/with-child": [
        "libs/common/interfaces/with-child/src/index.ts"
      ],
      "@backend/guards": ["libs/backend/guards/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["env.d.ts", "global.d.ts", "src"]
}
